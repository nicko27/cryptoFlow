# Crypto Bot v3.0 PyQt6 - Configuration

telegram:
  bot_token: "YOUR_BOT_TOKEN"
  chat_id: "YOUR_CHAT_ID"

crypto:
  symbols: [BTC, ETH, SOL]
  investment_amount: 100.0

alerts:
  enable: true
  lookback_minutes: 120
  drop_threshold: 10.0
  spike_threshold: 10.0

price_levels:
  enable: true
  levels:
    BTC: {low: 90000.0, high: 105000.0}
    ETH: {low: 3000.0, high: 4000.0}
    SOL: {low: 170.0, high: 200.0}
  buffer_eur: 2.0

timing:
  check_interval: 900

logging:
  file: logs/crypto_bot.log
  level: INFO
